<body >
    <div class="container row">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="margin-top: 50px;">
            <h2 class="text-center">Update</h2>
   
           
            <form method="post" action="/final_update/<%= id %>">
                ID:  <input class="form-control" type="text"  aria-label="default input example" disabled name="name" value=<%= id%>>
              Name:  <input class="form-control" type="text" aria-label="default input example" name="name" value=<%= name%>>
        
              Email:  <input class="form-control" type="text"  aria-label="default input example" name="email" value=<%= email%>>
             
               Mobile: <input class="form-control" type="text"  aria-label="default input example" name="mobile" value=<%= mobile%>>
             
               <button type="submit" class="btn btn-outline-success" href='http://localhost:8000/final_update/<%= id %>' style="margin-top: 10px; margin-left: 120px;">Update</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    
</div>
